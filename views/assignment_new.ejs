    </div>
    <div class="content">
      <div class="flex-container">
        <!--- Creating the Search Bar --->
        <div class="search-bar">
          <form class="form-container" action="index.html" method="post">
            <input
              type="text"
              name="search"
              value=""
              placeholder="Search course, lecture, exam..."
              autocomplete="off"
            />
            <button
              class="search-icon fa fa-search"
              type="submit"
              name="button"
            ></button>
          </form>
        </div>
        <!--- Notification and User Icons --->
        <div class="user-disp">
          <a href="#" class="fa fa-bell-o bell-icon"></a>&nbsp;&nbsp&nbsp;
                                <a href="#" class="fa fa-user-circle user-icon"></a>
                </div>
            </div>
            <form class="assignment-form" action="/teacher/Educafe/assignments/new" method="POST">
                <div class="form-group">
                    <label for="string">Teacher Name</label>
                    <input type="string" class="form-control" name="teacherName" />
                </div>

                <div class="form-group">
                    <label for="year">Year</label>
                    <input type="string" class="form-control" name="year" />
                </div>
                <div class="form-group">
                    <label for="question">Question</label>
                    <input type="string" class="form-control" name="question" />
                </div>
                <div class="form-group">
                    <label for="endTime">End Time</label>
                    <input type="date" class="form-control" name="endTime" />
                </div>
                <div class="form-group">
                    <label for="subjectName">Choose the Subject</label>
                    <select id="subjectName" name="subjectName" style="max-width: 6vw; margin-right:41%;">
                      <option value="Physics">Physics</option>
                      <option value="Maths">Maths</option>
                      <option value="Chemistry">Chemistry</option>
                      <option value="Biology">Biology</option>
                      <option value="Computer">Computer</option>
                      <option value="Physical Education">Physical Education</option>
                    </select>
                </div>
                <button type="submit" id="reg-btn">Register</button>
            </form>
        </div>
        </div>
