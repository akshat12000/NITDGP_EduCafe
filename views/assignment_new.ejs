<%- include("partials/headerMain.ejs"); -%>

    <body>
        <!--- This is the overlay div when it will be active when we will toggle the navbar in mobile device --->
        <div class="overlay againdisp">
        </div>
        <!--- This the Nav Bar --->
        <div class="main-content">
            <div class="navbar active">
                <!--- This is the NavBar Brand saying "GatherUp!" --->
                <div class="nav-brand">
                    <h1>EduCaf√©</h1> <span class="mycross fa fa-times againdisp"></span>
                </div>
                <!--- Nav Items --->
                <div class="nav-items">
                    <% if(designation==="student"){%>
                        <ul>
                            <li><a href="/student/EduCafe/overview"><i class="fa fa-bar-chart-o menu"></i>Overview</a></li>
                            <li class="menu-cou"><a href="#"><i class="fa fa-folder-o menu-cou-li"></i>Courses</a></li>
                            <li><a href="/student/EduCafe/schedule"><i class="fa fa-calendar menu"></i> Schedule</a></li>
                            <li><a href="#"><i class="fa fa-book menu"></i>Materials</a></li>
                            <li class="menu-ex"><a href="/student/EduCafe/assignments"><i class="fa fa-bookmark-o menu-ex-li"></i>Assignments</a></li>
                        </ul>
                        <%}%>
                            <% if(designation==="teacher"){%>
                                <ul>
                                    <li><a href="/teacher/EduCafe/overview"><i class="fa fa-bar-chart-o menu"></i>Overview</a></li>
                                    <li><a href="/teacher/EduCafe/schedule"><i class="fa fa-calendar menu"></i> Schedule</a></li>
                                    <li class="menu-ex"><a href="/teacher/EduCafe/assignments"><i class="fa fa-bookmark-o menu-ex-li"></i>Assignments</a></li>
                                </ul>
                                <%}%>
                </div>
                <!--- Log out Option --->
                <div class="nav-log-out">
                    <% if(designation==="student"){%>
                        <a href="/student/logout"><i class="fa fa-sign-out log-li"></i>Log out</a>
                        <%}%>
                            <% if(designation==="teacher"){%>
                                <a href="/teacher/logout"><i class="fa fa-sign-out log-li"></i>Log out</a>
                                <%}%>
                </div>
            </div>
            <!--- This is the hamburger symbol and it will be active once viewed in mobile device --->
            <div class="hamburger">
                <span id="ham" class="fa fa-bars"></span>
            </div>
            <div class="content">
                <div class="flex-container">
                    <!--- Creating the Search Bar --->
                    <div class="search-bar">
                        <form class="form-container" action="index.html" method="post">
                            <input type="text" name="search" value="" placeholder="Search course, lecture, exam..." autocomplete="off">
                            <button class="search-icon fa fa-search" type="submit" name="button"></button>
                        </form>
                    </div>
                    <!--- Notification and User Icons --->
                    <div class="user-disp">
                        <a href="#" class="fa fa-bell-o bell-icon"></a>&nbsp;&nbsp&nbsp;
                        <a href="#" class="fa fa-user-circle user-icon"></a>
                    </div>
                </div>
                <form action="/student/register" method="POST">
                    <div class="form-group">
                        <label for="string">Teacher Name</label>
                        <input type="name" class="form-control" name="teacherName">
                    </div>
                    <div class="form-group">
                        <label for="string">Subject Name</label>
                        <input type="email" class="form-control" name="username">
                    </div>
                    <div class="form-group">
                        <label for="password">Password</label>
                        <input type="password" class="form-control" name="password">
                    </div>
                    <div class="form-group">
                        <label for="contact">Contact</label>
                        <input type="contact" placeholder="888 888 8888" class="form-control" name="contact">
                    </div>
                    <div class="form-group">
                        <label for="year">Year</label>
                        <input type="year" class="form-control" name="year">
                    </div>
                    <div class="form-group">
                        <label for="roll">Roll</label>
                        <input type="roll" class="form-control" name="roll">
                    </div>
                    <div class="form-group">
                        <label for="subjects">Subjects (Separated by commas)</label>
                        <input type="subjects" class="form-control" name="subjects">                                    
                    </div>
                    <button type="submit" class="btn btn-dark">Register</button>
                </form>
            </div>
        </div>
    </body>
        <%- include("partials/footerMain.ejs"); -%>